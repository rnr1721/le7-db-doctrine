{
    "description": "Plugin that integrate Doctrine ORM in Le7 PHP MVC framework",
    "update_description": "will be created config and container item if not exists",
    "run": "init.php",
    "copy": {
        "{plugin_root}/dist/db_doctrine.php": "{project_root}/config/db_doctrine.php",
        "{plugin_root}/dist/dbDoctrineConf.php": "{project_root}/container/dbDoctrineConf.php"
    },
    "dir": {
        "Migrations": "{project_root}/Migrations",
        "Models": "{project_root}/Model",
        "Entities": "{project_root}/Model/Entity"
    },
    "remove": {
        "Redbean container config": "{project_root}/container/dbRedbeanConf.php",
        "Redbean config": "{project_root}/config/db_redbean.php"
    }
}
